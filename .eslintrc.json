{
    "extends": [
        "eslint:recommended",
        "plugins:import/errors",
        "plugins:react/recommended",
        "plugin:react-hooks/recommended",
        "plugins: jsx-a11y/recommended",
        "prettier"
    ],
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "node": {
                "extension": [
                    ".js",
                    ".jsx"
                ]
            }
        }
    }
}